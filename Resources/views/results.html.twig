{% extends 'layouts/candidates.html.twig' %}
{% import _self as m %}

{% block content %}
    <header class="s s-list-header">
        <div class="c">
            <div class="image-wrapper">
                <div class="image">
                    <img src="/images/stop.svg">
                </div>
            </div>

            <h1>Zvolení poslanci</h1>
        </div>
    </header>
    <section class="s s-call-to-action">
        <div class="c">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>
                            Meno
                        </th>
                        <th>
                            Strana/Koalícia
                        </th>
                        <th>
                            Počet hlasov
                        </th>
                        <th>
                            %
                        </th>
                        <th>
                            Obvod
                        </th>
                    </tr>
                </thead>
            {% for region_name, region in regions %}
                <tr>
                    <th colspan="5">
                        {{ region_name }}
                    </th>
                </tr>
                {% for sr_name, sr in region['subregions'] %}

                    {% for person in sr %}
                        <tr>
                            <td>
                                {{ person.name }}
                            </td>
                            <td>
                                {{ person.party }}
                            </td>
                            <td>
                                {{ person.nr_of_votes }}
                            </td>
                            <td>
                                {{ person.nr_of_votes_relative }}%
                            </td>
                            <td>
                                {{ sr_name }}
                            </td>
                        </tr>
                    {% endfor %}
                {% endfor %}

            {% endfor %}
            </table>
        </div>
    </section>
{% endblock %}